<div id="skillsSection" ng-controller="PersonalDataController" class="row">
<div class="sidebar col-md-4">
    <div class="panel panel-default">
        <div class="panel-heading">
            Текущий статус раздела:
        </div>
               
            <div ng-if="!GetFilledSkills().length" class="panel-body">
                <span class="label label-warning">You have no added skills</span>
            </div>
            <table ng-if="skills.length" class="table">
                <tr ng-repeat="skill in GetFilledSkills() track by $index">
                    <td>{{"Навык " + ($index + 1) + ": " + skill}}</td>
                </tr>

            </table>
        
    </div>
    </div>

    

    
    <div class="col-md-8">
        <h4>
            Введите ваши основные IT-навыки:
        </h4>
        <hr />
        <section id="inputs" ng-repeat="skill in skills" style="height: initial; padding: 4px">

            <span>{{"Навык " + ($index + 1) + ": "}}</span><input type="text" ng-model="skill.skill" /><br />
            
        </section>
        <input type="button" value="Добавить навык" ng-click="addSkill()" />
        <input type="button" value="Удалить навык" ng-click="removeSkill()" />
    </div>

    
</div>
    
